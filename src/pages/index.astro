---
import { Picture } from "@astrojs/image/components";
import { Icon } from "astro-iconify";
import Layout from "../layouts/Layout.astro";
let allPosts = await Astro.glob("./blog/**/index.mdx");
allPosts.sort((a, b) => new Date(b.frontmatter.pubDate).valueOf() - new Date(a.frontmatter.pubDate).valueOf());
let recentPosts = allPosts.slice(0, 5);
let socialMedia = [
    {
        url: "https://github.com/nicosalm/",
        icon: "fa6-brands:github",
        name: "GitHub",
    },
    {
        url: "/public/resume.pdf",
        icon: "mdi:resume",
        name: "Resume",
    },
    {
        url: "https://www.linkedin.com/in/nicosalm/",
        icon: "fa6-brands:linkedin",
        name: "LinkedIn",
    },
    {
        url: "mailto:nico@nicosalm.io",
        icon: "fluent:mail-24-filled",
        name: "Email",
    },
    {
        url: "https://leetcode.com/nicosalm",
        icon: "simple-icons:leetcode",
        name: "Leetcode",
    },
];
---

<Layout title="Nico Salm" description="Hello! I'm Nico. I'm a software engineer and quantum computing enthusiast. Check out my site!">
    <main class="mx-auto max-w-screen-xl xl:flex xl:p-0 p-4 pt-2">
        <!-- Main content (3/4 of the page) -->
        <div class="flex-grow xl:w-3/4 pb-4">
            <section class={`card flex-grow flex flex-row bg-[radial-gradient(ellipse_at_bottom_left,_var(--tw-gradient-stops))] from-[#f4c7fc] via-[#ede6fc] to-[#c7d5fc] dark:from-[#253b73] dark:to-[#8560c4]`}>
                <!-- Information -->
                <div class="p-6 flex flex-col justify-between">
                    <div>
                        <h1 class="font-display font-semibold text-4xl xl:text-5xl">Hello! I'm Nico.</h1>
                        <h2 class="font-normal text-2xl xl:text-3xl leading-7">CS @ University of Wisconsinâ€“Madison</h2>
                        <p class="pt-4 xl:text-lg">
                            I have a passion for solving complex problems and creating intuitive solutions.
                            I enjoy many aspects of computing, from ML and AI for predictive analytics to the intricacies of low-level systems, compilers, and computer science theory.
                            My goal is to master the skills needed to become an exceptional software engineer.
                        </p>
                    </div>
                    <!-- Social Media -->
                    <div class="flex justify-start mt-4 items-center">
                        {
                        socialMedia.map((sm) => (
                        <a href={sm.url} target="_blank" class="xl:mr-4 mr-3 xl:p-4 md:p-3 p-2 rounded-full bg-base-100/50 hover:bg-base-200/50 transition-all backdrop-blur-md" title={sm.name}>
                        <Icon name={sm.icon} class="xl:max-w-[2em] xl:h-8 md:max-w-[1.75em] md:h-7 max-w-[1.5em] h-6" />
                        </a>
                        ))
                        }
                    </div>
                </div>
                <!-- Picture -->
                <div class="flex-shrink-0 flex-col flex justify-end">
                    <Picture
                        formats={["avif", "webp", "png"]}
                        alt="Picture"
                        class="w-0 sm:w-[200px] md:w-[300px] aspect-[3/4.04]"
                        widths={[600, 300]}
                        loading="eager"
                        sizes="(max-width: 640px) 0px, (max-width: 768px) 200px, 300px"
                        src={import("../images/me.png")}
                    />
                </div>
            </section>

            <!-- Horizonal spacing -->
            <section class="flex-none p-1 lg:ml-2 lg:w-1"/>

            <!-- Container for Skills and Featured Cards (side by side) -->
            <div class="flex flex-col xl:flex-row mt-4">
                <!-- Skills Card (1/3 of the main content space) -->
                <section class="card flex flex-row bg-[radial-gradient(ellipse_at_bottom_left,_var(--tw-gradient-stops))] from-[#edf5fc] to-[#c6e2f5] dark:from-[#445263] dark:to-[#5c6e8e]">
                    <!-- Skills -->
                    <div class="p-2 flex flex-col justify-between">
                        <section class="flex-none p-3 lg:ml-2 lg:w-80">
                            <h2 class="font-display font-bold text-2xl mb-2">Skills</h2>
                            <div class="lg:grid-cols-1 grid sm:grid-cols-3 gap-4 mb-2 grid-cols-1">
                                <div class="flex flex-col">
                                    <h3 class="text-lg font-medium leading-5 mb-1 group-hover:underline dark:text-blue-200">Languages</h3>
                                    <p class="opacity-85 font-light leading-5 mb-1">JavaScript/TypeScript, Python, C/C++, Java, Rust, Zig, R, x86 Assembly, SQL</p>
                                </div>
                                <div class="flex flex-col">
                                    <h3 class="text-lg font-medium leading-5 mb-1 group-hover:underline dark:text-blue-200">Frameworks/Runtimes</h3>
                                    <p class="opacity-85 font-light leading-5 mb-1">
                                        React, Astro, ExpressJS, NodeJS, <a href="https://bun.sh/" class="hover:dark:text-blue-400 hover:text-blue-600 transition-all underline" target="_blank">Bun</a>
                                    </p>
                                </div>
                                <div class="flex flex-col">
                                    <h3 class="text-lg font-medium leading-5 mb-1 group-hover:underline dark:text-blue-200">Infrastructure</h3>
                                    <p class="opacity-85 font-light leading-5 mb-1">AWS (Amazon Web Services), Google Cloud, PostgreSQL (psql), S3</p>
                                </div>
                                <div class="flex flex-col">
                                    <h3 class="text-lg font-medium leading-5 mb-1 group-hover:underline dark:text-blue-200">Tools</h3>
                                    <p class="opacity-85 font-light leading-5 mb-1">Shell (Bash), Docker, Git, GitHub, Linux, <a href="https://neovim.io/charter/" class="hover:dark:text-blue-400 hover:text-blue-600 transition-all underline" target="_blank">Neo</a>Vim, Visual Studio Code</p>
                                </div>
                            </div>
                        </section>
                    </div>
                </section>

                <!-- Horizonal spacing -->
                <section class="flex-none p-2 lg:ml-2 lg:w-1"/>

                <!-- Featured Card (2/3 of the main content space) -->
                <section class="card flex flex-grow flex-row bg-[radial-gradient(ellipse_at_top,_var(--tw-gradient-stops))] from-[#c7d5fc] via-[#ede6fc] to-[#f4c7fc] dark:from-[#6251a6] dark:to-[#252a73]">
                    <div class="p-4 flex flex-col justify-between">
                        <div class="p-2">
                            <div class="text-base">
                                <h2 class="font-display font-bold text-2xl mb-2">About Me in Five Sentences</h2>

                            <p class="xl:text-lg">
                                I grew up in Door County, WI â€“ known for its beautiful tourist summers and snowy Midwest winters. 
                                I spent two years as a <a href="https://skunkworks.engr.wisc.edu/" class="hover:dark:text-blue-400 hover:text-blue-600 transition-all underline" target="_blank">Research Assistant</a> in Materials Informatics.
                                I co-founded the <a href="https://wqi.wisc.edu/wqcc/" class="hover:dark:text-blue-400 hover:text-blue-600 transition-all underline" target="_blank">Wisconsin Quantum Computing Club</a> and I am a member of the <a href="https://www.upl.cs.wisc.edu/" class="hover:dark:text-blue-400 hover:text-blue-600 transition-all underline" target="_blank">Undergraduate Projects Lab</a>.
                                I enjoy the high-intensity environment of <a href="https://devpost.ccom/nicosalm" class="hover:dark:text-blue-400 hover:text-blue-600 transition-all underline" target="_blank">Hackathons</a>, having won 2 out of 5, with <a href="blog/iquhack24/" class="hover:dark:text-blue-400 hover:text-blue-600 transition-all underline" target="_blank">MIT IQuHACK</a> being my favorite event to date.
                                I love realizing complex ideas and I am committed to continual innovation.</p>
                            <br/>
                            <p class="xl:text-lg">
                                    Thank you for stopping by today! Reach out to me via my email with any inquiries or questions. ðŸ¤˜</p>
                            </div>
                        </div>
                    </div>
                </section>
            </div>
        </div>

        <!-- Right Column for Articles (1/4 of the page) -->
        <div class="w-full xl:w-1/4 xl:pl-4">
            <div class="flex flex-col gap-4">
                <!-- Articles mapping -->
                <section class="flex-none p-3 lg:ml-2 lg:w-80">
                    <h2 class="font-display font-bold text-2xl mb-2">Articles</h2>
                    <div class="lg:grid-cols-1 grid sm:grid-cols-3 gap-4 mb-2 grid-cols-1">
                        {
                        recentPosts.map((post, index) => (
                        index < 5 && (
                        <a rel="prefetch" href={post.url} class="group">
                        <h3 class="text-lg font-medium leading-5 mb-1 group-hover:underline dark:text-blue-200">{post.frontmatter.title}</h3>
                        <p class="opacity-85 font-light leading-5 mb-1">{post.frontmatter.description}</p>
                        <div class="flex flex-wrap opacity-80 items-center">
                        <p class="text-sm font-normal leading-5">{new Date(post.frontmatter.pubDate).toLocaleDateString("en-us", { year: "numeric", month: "short", day: "numeric" })}</p>
                        <span class="divider divider-horizontal mx-0" />
                        <span class="badge badge-sm badge-outline">{post.frontmatter.minutesRead} min read</span>
                        </div>
                        </a>
                        )
                        ))
                        }
                    </div>
                    <div class="flex-none p-1 lg:ml-2 lg:w-1"/>
                    <a rel="prefetch" href="/blog" class="text-blue-600 dark:text-blue-400 hover:underline">See all articles â†’</a>
                </section>
            </div>
        </div>
    </main>
</Layout>
